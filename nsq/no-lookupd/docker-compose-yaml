version: '3'
services:
  nsqd:
    network_mode: host
    image: nsqio/nsq
    command: /nsqd --broadcast-address 127.0.0.1 --data-path=/data
    ports:
      - 127.0.0.1:4150:4150
      - 127.0.0.1:4151:4151
    volumes:
      - nsqd:/data
  nsqadmin:
    network_mode: host
    image: nsqio/nsq
    command: /nsqadmin --nsqd-http-address=127.0.0.1:4151
    depends_on:
      - nsqd  
    ports:
      - 127.0.0.1:4171:4171

volumes:
  nsqd:
    driver: local
